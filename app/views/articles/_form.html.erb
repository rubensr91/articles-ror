    <div class="container">
        <%= form_with(model: @article, local: true) do |form| %>

            <div>
                <%= form.label :title %>
                <%= form.text_field :title, class: "form-control" %>
            </div>

            <div>
                <%= form.label :content %>
                <%= form.text_area :content, class: "form-control" %>
            </div>

            <div>
                <button type="submit" class="btn btn-secondary button">Save</button>
            </div>
        <%end %>
    </div>
